{
  "name": "react-fit-monorepo",
  "version": "1.0.0",
  "description": "react-fit monorepo",
  "type": "module",
  "workspaces": [
    "packages/*",
    "test"
  ],
  "scripts": {
    "build": "yarn workspace react-fit build",
    "dev": "yarn workspace react-fit watch & yarn workspace test dev",
    "lint": "yarn workspaces foreach run lint",
    "postinstall": "husky install",
    "prettier": "yarn workspaces foreach run prettier",
    "test": "yarn workspaces foreach run test",
    "tsc": "yarn workspaces foreach run tsc",
    "unit": "yarn workspaces foreach run unit"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^2.7.0"
  },
  "packageManager": "yarn@3.1.0"
}
